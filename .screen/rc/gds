source /Users/ken/.screenrc
chdir /Users/ken/src/work/geoloqi/Geoloqi-Developer-Site

screen -t 'bash'    0 bash
screen -t 'thin'    1 bundle exec thin -p 9292 start
screen -t 'irb'     3 bundle exec irb -r./environment
screen -t 'tig'     4 tig

bind -c gds 0 screen -t 'bash'    0 bash
bind -c gds 1 screen -t 'thin'    1 bundle exec thin -p 9292 start
bind -c gds 3 screen -t 'irb'     3 bundle exec irb -r./environment
bind -c gds 4 screen -t 'tig'     4 tig
bind - command -c gds

select 0
