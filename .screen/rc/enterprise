source /Users/ken/.screen/rc/common
chdir /Users/ken/src/current_app

screen -t 'bash'    0 bash
screen -t 'thin'    1 bundle exec thin -e kn_dev -R config.ru -p 4567 start
screen -t 'psql'    2 psql -h localhost $SCREEN_DB
screen -t 'console' 3 bundle exec script/console
screen -t 'tig'     4 tig

bind -c enterprise 0 screen -t 'bash'    0 bash
bind -c enterprise 1 screen -t 'thin'    1 bundle exec thin -e kn_dev -R config.ru -p 4567 start
bind -c enterprise 2 screen -t 'psql'    2 psql -h localhost $SCREEN_DB
bind -c enterprise 3 screen -t 'console' 3 bundle exec script/console
bind -c enterprise 4 screen -t 'tig'     4 tig
bind - command -c enterprise

select 0
