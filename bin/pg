#!/bin/bash

DATA=/usr/local/pgsql/data
LOG=/var/log/psql.log
DATA2=/usr/local/pgsql/data2
LOG2=/var/log/psql2.log

function service {
  /usr/local/bin/pg_ctl -D $1 -l $2 $3
}

case $1 in
    'start')
        echo starting "slave"...
        service ${DATA2} ${LOG2} start
        sleep 3
        echo starting "master"...
        service ${DATA} ${LOG} start
        ;;
    'stop')
        echo stopping "master"...
        service ${DATA} ${LOG} stop
        sleep 3
        echo stopping "slave"...
        service ${DATA2} ${LOG2} stop
        ;;
esac

