source /Users/ken/.screenrc
chdir /Users/ken/src/work/pedalpower

screen -t 'bash'    0 bash
screen -t 'thin'    1 rails s thin
screen -t 'psql'    2 psql pedalpower_dev
screen -t 'console' 3 rails c
screen -t 'tig'     4 tig

bind -c pp 0 screen -t 'bash'    0 bash
bind -c pp 1 screen -t 'thin'    1 rails s thin
bind -c pp 2 screen -t 'psql'    2 psql pedalpower_dev
bind -c pp 3 screen -t 'console' 3 rails c
bind -c pp 4 screen -t 'tig'     4 tig
bind - command -c pp

select 0
